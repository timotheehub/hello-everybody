<?xml version="1.0" encoding="utf-8"?>
<manifest package="fr.insa.helloeverybody"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/HETheme" >
        <activity android:name=".HelloEverybodyActivity" android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".conversations.ConversationActivity" android:theme="@style/HETheme.NoTitleBar"
            		android:label="@string/app_name"></activity>
        <activity android:name=".conversations.ConversationsListActivity" android:theme="@style/HETheme.NoTitleBar"
            	 	android:label="@string/app_name"></activity>
        <activity android:name=".OnstartActivity" android:theme="@style/HETheme.NoTitleBar"
            		android:label="@string/app_name" ></activity>
        <activity android:name=".profile.ProfileActivity" android:theme="@style/HETheme.NoTitleBar"
            		android:label="@string/app_name"></activity>
        <activity android:name=".profile.EditProfileActivity" android:label="@string/app_name"
            		android:windowSoftInputMode="stateVisible|adjustResize"></activity>
		<activity android:name=".contacts.ContactsListActivity" android:theme="@style/HETheme.NoTitleBar"
		    		android:label="@string/app_name" android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name=".contacts.ContactProfileActivity" android:label="@string/app_name"></activity>
        <activity android:name=".contacts.InviteContactActivity" android:label="@string/app_name"></activity>
        <activity android:name=".preferences.UserPreferencesActivity" android:label="@string/app_name"></activity>
        <activity android:name=".preferences.AgePreferenceActivity" android:label="@string/app_name" 
            		android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity android:name=".TabsActivity" android:theme="@style/HETheme.NoTitleBar"
            		android:label="@string/app_name"></activity>
        <service android:enabled="true" android:name=".smack.ChatService" android:exported="false"></service>
    </application>

</manifest>